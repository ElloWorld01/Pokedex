<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="587.0" prefWidth="406.0"
            style="-fx-background-color: #BE1D25;" xmlns="http://javafx.com/javafx/18"
            fx:controller="fr.elloworld.pokedex.controllers.PokemonDescriptionController">
    <children>
        <Button fx:id="back" defaultButton="true" layoutX="128.0" layoutY="517.0" onAction="#goBackAction"
                prefHeight="60.0" prefWidth="150.0" text="Retour"/>
        <Pane layoutX="18.0" layoutY="56.0" prefHeight="443.0" prefWidth="371.0" style="-fx-background-color: #00B1D0;">
            <children>
                <Button fx:id="abilitiesInfos" defaultButton="true" layoutX="131.0" layoutY="389.0"
                        onAction="#goToInfosCapacitesAction" prefHeight="40.0" prefWidth="111.0"
                        style="-fx-background-color: ff6e6e;" text="Infos capacités"/>
                <Label fx:id="pokemonName" alignment="BASELINE_CENTER" graphicTextGap="1000.0" layoutX="11.0"
                       layoutY="221.0" prefHeight="161.0" prefWidth="349.0" text="Chargement...">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Label>
                <Label layoutX="46.0" layoutY="24.0" text="Description du Pokémon">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <ImageView fx:id="pokemonImage" fitHeight="176.0" fitWidth="176.0" layoutX="98.0" layoutY="59.0"
                           pickOnBounds="true" preserveRatio="true"/>
            </children>
        </Pane>
        <Button fx:id="music" layoutX="148.0" layoutY="17.0" mnemonicParsing="false" onAction="#onMusicClick"
                prefHeight="27.0" prefWidth="131.0" text="Lire la musique"/>
    </children>
</AnchorPane>
